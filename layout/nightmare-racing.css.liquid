@media (max-width: 480px) {
    .container {
        padding: 0 15px;
    }
    
    .hero-text {
        margin-left: -5px;
    }
    
    .hero-title {
        font-size: 2rem;
    }
    
    .hero-image {
        width: 200px;
    }
    
    .section-header h2 {
        font-size: 1.8rem;
    }
    
    .contact-form {
        padding: 1.5rem;
    }
    
    .service-card,
    .category-card {
        padding: 2rem 1.5rem;
    }
    
    .car-info {
        padding: 1.5rem;
    }
    
    .mobile-menu {
        max-width: 100%;
    }
    
    .product-grid {
        grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    }
    
    .featured-products {
        grid-template-columns: repeat(auto-fit, minmax(130px, 1fr));
    }
}

/* Landscape orientation on mobile devices */
@media (max-height: 500px) and (orientation: landscape) {
    .hero {
        min-height: 100vh;
        padding-top: 0;
    }
    
    .hero-content {
        padding: 70px 20px 20px;
    }
    
    .mobile-menu {
        padding: 1rem;
    }
    
    .mobile-menu-content {
        padding: 1rem;
    }
}

/* High DPI displays */
@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
    .hero-image {
        filter: drop-shadow(0 0 20px {{ accent_color | color_modify: 'alpha', 0.2 }});
    }
}

/* Print styles */
@media print {
    body {
        background: white !important;
        color: black !important;
    }
    
    .navbar,
    .mobile-menu,
    .cart-drawer,
    .quick-view-modal,
    .cart-notification {
        display: none !important;
    }
}

/* Accessibility improvements */
@media (prefers-reduced-motion: reduce) {
    * {
        animation-duration: 0.01ms !important;
        animation-iteration-count: 1 !important;
        transition-duration: 0.01ms !important;
    }
    
    :root {
        --animation-speed: 0.01ms;
        --hover-transform: none;
    }
}

/* Dark mode support (if user prefers) */
@media (prefers-color-scheme: light) {
    /* Override for users who prefer light mode */
    {% unless settings.force_dark_mode %}
    :root {
        --primary-black: #ffffff;
        --secondary-black: #f8f9fa;
        --pure-white: #000000;
        --light-gray: #343a40;
        --medium-gray: #6c757d;
        --dark-gray: #dee2e6;
    }
    {% endunless %}
}

/* Shopify Checkout Styles */
.checkout-button {
    background: var(--red-gradient) !important;
    border: none !important;
    border-radius: 8px !important;
    color: var(--pure-white) !important;
    font-weight: 600 !important;
    text-transform: uppercase !important;
    letter-spacing: 1px !important;
    transition: all var(--animation-speed) ease !important;
}

.checkout-button:hover {
    transform: translateY(-2px) !important;
    box-shadow: 0 6px 20px {{ accent_color | color_modify: 'alpha', 0.4 }} !important;
}

/* Gift Card Styles */
.gift-card {
    background: var(--dark-gradient);
    border: 2px solid var(--accent-red);
    border-radius: 15px;
    padding: 2rem;
    text-align: center;
    margin: 2rem auto;
    max-width: 400px;
}

.gift-card-amount {
    font-size: 2rem;
    font-weight: 700;
    color: var(--accent-red);
    margin-bottom: 1rem;
}

/* 404 Page Styles */
.error-page {
    min-height: 60vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 4rem 0;
}

.error-code {
    font-size: 6rem;
    font-weight: 900;
    color: var(--accent-red);
    margin-bottom: 1rem;
    font-family: var(--font-primary);
}

.error-message {
    font-size: 1.5rem;
    margin-bottom: 2rem;
    color: var(--medium-gray);
}

/* Blog Styles */
.blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
}

.blog-card {
    background: var(--secondary-black);
    border-radius: 15px;
    overflow: hidden;
    transition: all var(--animation-speed) ease;
}

.blog-card:hover {
    transform: var(--hover-transform);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
}

.blog-image {
    height: 200px;
    overflow: hidden;
}

.blog-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--animation-speed) ease;
}

.blog-card:hover .blog-image img {
    transform: scale(1.05);
}

.blog-content {
    padding: 2rem;
}

.blog-date {
    color: var(--medium-gray);
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
}

.blog-title {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    line-height: 1.3;
}

.blog-title a {
    color: var(--pure-white);
    text-decoration: none;
    transition: color var(--animation-speed) ease;
}

.blog-title a:hover {
    color: var(--accent-red);
}

.blog-excerpt {
    color: var(--medium-gray);
    margin-bottom: 1.5rem;
    line-height: 1.6;
}

.read-more {
    color: var(--accent-red);
    text-decoration: none;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: color var(--animation-speed) ease;
}

.read-more:hover {
    color: var(--accent-red-hover);
}

/* Pagination */
.pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    margin-top: 3rem;
}

.pagination a,
.pagination span {
    padding: 0.75rem 1rem;
    background: var(--secondary-black);
    color: var(--pure-white);
    text-decoration: none;
    border-radius: 5px;
    transition: all var(--animation-speed) ease;
    min-width: 40px;
    text-align: center;
}

.pagination a:hover {
    background: var(--accent-red);
    transform: translateY(-2px);
}

.pagination .current {
    background: var(--accent-red);
    color: var(--pure-white);
}

.pagination .disabled {
    opacity: 0.5;
    cursor: not-allowed;
}

/* Breadcrumbs */
.breadcrumbs {
    padding: 1rem 0;
    margin-bottom: 2rem;
    border-bottom: 1px solid var(--dark-gray);
}

.breadcrumbs ul {
    list-style: none;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin: 0;
    padding: 0;
}

.breadcrumbs li {
    color: var(--medium-gray);
}

.breadcrumbs li::after {
    content: '>';
    margin-left: 0.5rem;
    color: var(--dark-gray);
}

.breadcrumbs li:last-child::after {
    display: none;
}

.breadcrumbs a {
    color: var(--medium-gray);
    text-decoration: none;
    transition: color var(--animation-speed) ease;
}

.breadcrumbs a:hover {
    color: var(--accent-red);
}

/* Search Results */
.search-results {
    padding: var(--section-padding);
}

.search-query {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    color: var(--medium-gray);
}

.search-query strong {
    color: var(--accent-red);
}

.no-results {
    text-align: center;
    padding: 4rem 0;
}

.no-results h2 {
    margin-bottom: 1rem;
    color: var(--medium-gray);
}

.search-suggestions-list {
    margin-top: 2rem;
}

.search-suggestions-list h3 {
    margin-bottom: 1rem;
    color: var(--accent-red);
}

.search-suggestions-list ul {
    list-style: none;
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
}

.search-suggestions-list a {
    color: var(--medium-gray);
    text-decoration: none;
    padding: 0.5rem 1rem;
    background: var(--secondary-black);
    border-radius: 20px;
    transition: all var(--animation-speed) ease;
}

.search-suggestions-list a:hover {
    background: var(--accent-red);
    color: var(--pure-white);
}

/* Customer Account Pages */
.account-page {
    padding: var(--section-padding);
    max-width: 800px;
    margin: 0 auto;
}

.account-nav {
    display: flex;
    gap: 1rem;
    margin-bottom: 3rem;
    border-bottom: 1px solid var(--dark-gray);
    padding-bottom: 1rem;
}

.account-nav a {
    padding: 0.75rem 1.5rem;
    background: var(--secondary-black);
    color: var(--pure-white);
    text-decoration: none;
    border-radius: 5px;
    transition: all var(--animation-speed) ease;
}

.account-nav a:hover,
.account-nav a.active {
    background: var(--accent-red);
}

.account-section {
    margin-bottom: 3rem;
}

.order-history {
    display: grid;
    gap: 1.5rem;
}

.order-card {
    background: var(--secondary-black);
    padding: 2rem;
    border-radius: 10px;
    border: 1px solid var(--dark-gray);
}

.order-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--dark-gray);
}

.order-number {
    font-weight: 600;
    color: var(--accent-red);
}

.order-status {
    padding: 0.25rem 0.75rem;
    border-radius: 15px;
    font-size: 0.85rem;
    font-weight: 600;
    text-transform: uppercase;
}

.status-fulfilled {
    background: var(--cart-success);
    color: var(--pure-white);
}

.status-pending {
    background: var(--cart-warning);
    color: var(--primary-black);
}

.status-cancelled {
    background: var(--cart-error);
    color: var(--pure-white);
}

.order-items {
    display: grid;
    gap: 1rem;
}

.order-item {
    display: flex;
    align-items: center;
    gap: 1rem;
}

.order-item-image {
    width: 60px;
    height: 60px;
    object-fit: cover;
    border-radius: 5px;
}

.order-item-details {
    flex: 1;
}

.order-item-title {
    font-weight: 600;
    margin-bottom: 0.25rem;
}

.order-item-variant {
    color: var(--medium-gray);
    font-size: 0.9rem;
}

.order-item-price {
    color: var(--price-color);
    font-weight: 600;
}

/* Address Book */
.address-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
}

.address-card {
    background: var(--secondary-black);
    padding: 2rem;
    border-radius: 10px;
    border: 1px solid var(--dark-gray);
    position: relative;
}

.address-card.default {
    border-color: var(--accent-red);
}

.address-default-badge {
    position: absolute;
    top: 10px;
    right: 10px;
    background: var(--accent-red);
    color: var(--pure-white);
    padding: 0.25rem 0.75rem;
    border-radius: 15px;
    font-size: 0.75rem;
    font-weight: 600;
}

.address-actions {
    margin-top: 1.5rem;
    display: flex;
    gap: 1rem;
}

.address-actions .btn {
    flex: 1;
    padding: 0.5rem 1rem;
    font-size: 0.9rem;
}

/* Login/Register Forms */
.auth-page {
    max-width: 400px;
    margin: 0 auto;
    padding: var(--section-padding);
}

.auth-form {
    background: var(--secondary-black);
    padding: 3rem;
    border-radius: 15px;
    text-align: center;
}

.auth-form h1 {
    margin-bottom: 2rem;
    font-size: 2rem;
}

.auth-toggle {
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid var(--dark-gray);
}

.auth-toggle a {
    color: var(--accent-red);
    text-decoration: none;
    font-weight: 600;
}

.auth-toggle a:hover {
    text-decoration: underline;
}

.forgot-password {
    text-align: center;
    margin-top: 1rem;
}

.forgot-password a {
    color: var(--medium-gray);
    text-decoration: none;
    font-size: 0.9rem;
}

.forgot-password a:hover {
    color: var(--accent-red);
}

/* Collection Filters */
.collection-filters {
    background: var(--secondary-black);
    padding: 2rem;
    border-radius: 10px;
    margin-bottom: 3rem;
}

.filter-group {
    margin-bottom: 2rem;
}

.filter-group h4 {
    margin-bottom: 1rem;
    color: var(--accent-red);
    font-family: var(--font-secondary);
}

.filter-options {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
}

.filter-option {
    padding: 0.5rem 1rem;
    background: var(--primary-black);
    color: var(--pure-white);
    border: 1px solid var(--dark-gray);
    border-radius: 20px;
    cursor: pointer;
    transition: all var(--animation-speed) ease;
    font-size: 0.9rem;
}

.filter-option:hover,
.filter-option.active {
    background: var(--accent-red);
    border-color: var(--accent-red);
}

.price-range {
    display: flex;
    align-items: center;
    gap: 1rem;
}

.price-input {
    flex: 1;
    padding: 0.5rem;
    background: var(--primary-black);
    border: 1px solid var(--dark-gray);
    border-radius: 5px;
    color: var(--pure-white);
    text-align: center;
}

.filter-actions {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
}

.clear-filters {
    background: transparent;
    color: var(--medium-gray);
    border: 1px solid var(--dark-gray);
}

.clear-filters:hover {
    background: var(--dark-gray);
    color: var(--pure-white);
}

/* Collection Sorting */
.collection-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    flex-wrap: wrap;
    gap: 1rem;
}

.collection-count {
    color: var(--medium-gray);
}

.sort-select {
    padding: 0.75rem 1rem;
    background: var(--secondary-black);
    border: 1px solid var(--dark-gray);
    border-radius: 5px;
    color: var(--pure-white);
    cursor: pointer;
}

.sort-select:focus {
    outline: none;
    border-color: var(--accent-red);
}

/* Product Page Specific */
.product-page {
    padding: var(--section-padding);
}

.product-main {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    margin-bottom: 4rem;
}

.product-images {
    position: relative;
}

.product-image-main {
    width: 100%;
    height: 600px;
    object-fit: cover;
    border-radius: 15px;
    margin-bottom: 1rem;
}

.product-thumbnails {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(80px, 1fr));
    gap: 1rem;
}

.thumbnail {
    height: 80px;
    object-fit: cover;
    border-radius: 8px;
    cursor: pointer;
    opacity: 0.7;
    transition: opacity var(--animation-speed) ease;
    border: 2px solid transparent;
}

.thumbnail:hover,
.thumbnail.active {
    opacity: 1;
    border-color: var(--accent-red);
}

.product-details {
    display: flex;
    flex-direction: column;
}

.product-title-main {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    line-height: 1.2;
}

.product-price-main {
    font-size: 2rem;
    color: var(--price-color);
    font-weight: 700;
    margin-bottom: 2rem;
}

.product-description {
    color: var(--medium-gray);
    line-height: 1.8;
    margin-bottom: 2rem;
}

.product-options {
    margin-bottom: 2rem;
}

.option-group {
    margin-bottom: 1.5rem;
}

.option-label {
    display: block;
    margin-bottom: 0.75rem;
    font-weight: 600;
    color: var(--pure-white);
}

.option-values {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
}

.option-value {
    padding: 0.75rem 1.5rem;
    background: var(--secondary-black);
    border: 2px solid var(--dark-gray);
    border-radius: 8px;
    cursor: pointer;
    transition: all var(--animation-speed) ease;
    color: var(--pure-white);
}

.option-value:hover,
.option-value.selected {
    border-color: var(--accent-red);
    background: var(--primary-black);
}

.option-value.unavailable {
    opacity: 0.5;
    cursor: not-allowed;
    text-decoration: line-through;
}

.quantity-selector {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 2rem;
}

.quantity-label {
    font-weight: 600;
}

.quantity-input {
    display: flex;
    align-items: center;
    background: var(--secondary-black);
    border: 2px solid var(--dark-gray);
    border-radius: 8px;
    overflow: hidden;
}

.quantity-btn {
    width: 40px;
    height: 40px;
    background: none;
    border: none;
    color: var(--pure-white);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color var(--animation-speed) ease;
}

.quantity-btn:hover {
    background: var(--accent-red);
}

.quantity-number {
    width: 60px;
    text-align: center;
    background: none;
    border: none;
    color: var(--pure-white);
    font-size: 1rem;
}

.product-actions {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.product-meta {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--dark-gray);
}

.meta-item {
    display: flex;
    margin-bottom: 0.5rem;
}

.meta-label {
    font-weight: 600;
    margin-right: 1rem;
    min-width: 100px;
}

.meta-value {
    color: var(--medium-gray);
}

.meta-value a {
    color: var(--accent-red);
    text-decoration: none;
}

.meta-value a:hover {
    text-decoration: underline;
}

/* Product Tabs */
.product-tabs {
    margin-top: 4rem;
}

.tab-buttons {
    display: flex;
    border-bottom: 1px solid var(--dark-gray);
    margin-bottom: 2rem;
}

.tab-button {
    padding: 1rem 2rem;
    background: none;
    border: none;
    color: var(--medium-gray);
    cursor: pointer;
    font-size: 1rem;
    font-weight: 600;
    border-bottom: 2px solid transparent;
    transition: all var(--animation-speed) ease;
}

.tab-button:hover,
.tab-button.active {
    color: var(--accent-red);
    border-bottom-color: var(--accent-red);
}

.tab-content {
    display: none;
    line-height: 1.8;
}

.tab-content.active {
    display: block;
}

/* Related Products */
.related-products {
    margin-top: 6rem;
}

.related-products h2 {
    text-align: center;
    margin-bottom: 3rem;
    font-size: 2.5rem;
}

/* Recently Viewed */
.recently-viewed {
    margin-top: 4rem;
    padding-top: 4rem;
    border-top: 1px solid var(--dark-gray);
}

/* Back to Top Button */
.back-to-top {
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    width: 50px;
    height: 50px;
    background: var(--accent-red);
    color: var(--pure-white);
    border: none;
    border-radius: 50%;
    cursor: pointer;
    display: none;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
    z-index: 1000;
    transition: all var(--animation-speed) ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
}

.back-to-top:hover {
    transform: scale(1.1);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.4);
}

.back-to-top.visible {
    display: flex;
}

/* Cookie Notice */
.cookie-notice {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: var(--secondary-black);
    padding: 1.5rem;
    z-index: 9999;
    transform: translateY(100%);
    transition: transform var(--animation-speed) ease;
    border-top: 1px solid var(--dark-gray);
}

.cookie-notice.visible {
    transform: translateY(0);
}

.cookie-content {
    max-width: var(--container-max-width);
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
    flex-wrap: wrap;
}

.cookie-text {
    flex: 1;
    color: var(--medium-gray);
    line-height: 1.5;
}

.cookie-actions {
    display: flex;
    gap: 1rem;
}

/* Age Verification Modal */
.age-verification {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0, 0, 0, 0.95);
    z-index: 10000;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    transition: all var(--animation-speed) ease;
}

.age-verification.visible {
    opacity: 1;
    visibility: visible;
}

.age-verification-content {
    background: var(--secondary-black);
    padding: 3rem;
    border-radius: 15px;
    text-align: center;
    max-width: 500px;
    width: 90%;
}

.age-verification h2 {
    margin-bottom: 1.5rem;
    color: var(--accent-red);
}

.age-verification p {
    margin-bottom: 2rem;
    color: var(--medium-gray);
    line-height: 1.6;
}

.age-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
}

/* Performance optimizations for mobile */
{% if mobile_optimized %}
@media (max-width: 768px) {
    .hero::after {
        background-attachment: scroll;
        background-size: cover;
    }
    
    .service-card::before,
    .car-overlay {
        display: none;
    }
    
    .parallax-element {
        transform: none !important;
    }
}
{% endif %}

/* Final responsive adjustments */
@media (max-width: 768px) {
    .product-main {
        grid-template-columns: 1fr;
        gap: 2rem;
    }
    
    .product-image-main {
        height: 400px;
    }
    
    .product-title-main {
        font-size: 2rem;
    }
    
    .product-price-main {
        font-size: 1.5rem;
    }
    
    .tab-buttons {
        flex-wrap: wrap;
    }
    
    .tab-button {
        padding: 0.75rem 1rem;
        font-size: 0.9rem;
    }
    
    .collection-header {
        flex-direction: column;
        align-items: stretch;
    }
    
    .account-nav {
        flex-wrap: wrap;
    }
    
    .auth-form {
        padding: 2rem;
    }
    
    .cookie-content {
        flex-direction: column;
        text-align: center;
    }
    
    .age-verification-content {
        padding: 2rem;
    }
    
    .age-actions {
        flex-direction: column;
    }
}