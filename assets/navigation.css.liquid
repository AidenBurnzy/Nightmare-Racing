{% comment %}
  Navigation Styles - Shopify Liquid Version
  This file should be saved as 'navigation.css.liquid' in your theme's assets folder
  Usage: {{ 'navigation.css' | asset_url | stylesheet_tag }}
{% endcomment %}

{% liquid
  assign nav_bg_color = settings.navbar_background | default: '#0a0a0a'
  assign nav_bg_opacity = settings.navbar_opacity | default: 0.95
  assign nav_text_color = settings.navbar_text_color | default: '#ffffff'
  assign nav_accent_color = settings.navbar_accent_color | default: '#e50000'
  assign nav_hover_color = settings.navbar_hover_color | default: '#ff1a1a'
  
  assign logo_image = settings.logo
  assign logo_width = settings.logo_width | default: 55
  assign mobile_logo_width = settings.mobile_logo_width | default: 50
  
  assign mobile_menu_width = settings.mobile_menu_width | default: 300
  assign mobile_menu_bg = settings.mobile_menu_background | default: '#1a1a1a'
  
  assign container_width = settings.container_width | default: '1200px'
  assign navbar_height = settings.navbar_height | default: 70
  
  assign enable_sticky_nav = settings.enable_sticky_nav | default: true
  assign enable_nav_blur = settings.enable_nav_blur | default: true
  assign enable_nav_animations = settings.enable_nav_animations | default: true
%}

/* ================================
   NAVIGATION STYLES - Shopify Liquid Version
   ================================ */

/* CSS Variables for Navigation */
:root {
    --nav-bg-color: {{ nav_bg_color }};
    --nav-bg-rgba: {{ nav_bg_color | color_modify: 'alpha', nav_bg_opacity }};
    --nav-text-color: {{ nav_text_color }};
    --nav-accent-color: {{ nav_accent_color }};
    --nav-hover-color: {{ nav_hover_color }};
    --nav-gradient: linear-gradient(135deg, {{ nav_accent_color }}, {{ nav_hover_color }});
    --mobile-menu-bg: {{ mobile_menu_bg }};
    --navbar-height: {{ navbar_height }}px;
    --logo-width: {{ logo_width }}px;
    --mobile-logo-width: {{ mobile_logo_width }}px;
    --mobile-menu-width: {{ mobile_menu_width }}px;
    --container-max-width: {{ container_width }};
    
    /* Animation Controls */
    --nav-transition-speed: {% if enable_nav_animations %}0.3s{% else %}0.01ms{% endif %};
    --nav-hover-transform: {% if enable_nav_animations %}scale(1.05){% else %}none{% endif %};
}

/* Main Navigation Bar */
.navbar {
    position: {% if enable_sticky_nav %}fixed{% else %}relative{% endif %};
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
    background: var(--nav-bg-rgba);
    {% if enable_nav_blur %}backdrop-filter: blur(10px);{% endif %}
    z-index: 1000;
    transition: all var(--nav-transition-speed) ease;
    height: var(--navbar-height);
    border-bottom: 1px solid {{ nav_bg_color | color_modify: 'alpha', 0.1 }};
}

/* Shopify-specific navbar states */
.navbar.scrolled {
    background: {{ nav_bg_color | color_modify: 'alpha', 0.98 }};
    {% if enable_nav_blur %}backdrop-filter: blur(15px);{% endif %}
    box-shadow: 0 2px 20px {{ nav_bg_color | color_modify: 'alpha', 0.3 }};
}

.navbar.cart-open,
.navbar.search-open {
    z-index: 9999;
}

/* Navigation Container */
.nav-container {
    max-width: var(--container-max-width);
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100%;
    position: relative;
}

/* Logo Section */
.nav-logo {
    display: flex;
    align-items: center;
    z-index: 1001;
}

{% if logo_image %}
.nav-logo img {
    height: var(--logo-width);
    width: auto;
    transition: transform var(--nav-transition-speed) ease;
    max-width: none;
}

.nav-logo img:hover {
    transform: var(--nav-hover-transform);
}

.nav-logo a {
    display: flex;
    align-items: center;
    text-decoration: none;
}

.nav-logo a:focus {
    outline: 2px solid var(--nav-accent-color);
    outline-offset: 2px;
    border-radius: 4px;
}
{% else %}
/* Fallback text logo if no image is set */
.nav-logo h2 {
    font-family: var(--font-primary, 'Orbitron', monospace);
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--nav-text-color);
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 2px;
    transition: color var(--nav-transition-speed) ease;
}

.nav-logo h2:hover {
    color: var(--nav-accent-color);
}

.nav-logo a {
    text-decoration: none;
    color: inherit;
}
{% endif %}

/* Desktop Navigation Menu */
.nav-menu {
    display: flex;
    list-style: none;
    gap: 2rem;
    margin: 0;
    padding: 0;
    align-items: center;
}

.nav-menu li {
    position: relative;
}

.nav-menu a {
    color: var(--nav-text-color);
    text-decoration: none;
    font-weight: 500;
    font-size: 1rem;
    transition: color var(--nav-transition-speed) ease;
    position: relative;
    padding: 0.5rem 0;
    text-transform: uppercase;
    letter-spacing: 1px;
    display: block;
}

.nav-menu a::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--nav-gradient);
    transition: width var(--nav-transition-speed) ease;
}

.nav-menu a:hover {
    color: var(--nav-accent-color);
}

.nav-menu a:hover::after,
.nav-menu a.active::after {
    width: 100%;
}

/* Dropdown Menus for Collections/Categories */
.nav-menu .dropdown {
    position: relative;
}

.nav-menu .dropdown-content {
    position: absolute;
    top: 100%;
    left: 0;
    background: var(--mobile-menu-bg);
    min-width: 200px;
    box-shadow: 0 8px 24px {{ nav_bg_color | color_modify: 'alpha', 0.3 }};
    border-radius: 8px;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all var(--nav-transition-speed) ease;
    z-index: 1002;
    padding: 1rem 0;
    border: 1px solid {{ nav_text_color | color_modify: 'alpha', 0.1 }};
}

.nav-menu .dropdown:hover .dropdown-content {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
}

.dropdown-content a {
    padding: 0.75rem 1.5rem;
    display: block;
    color: var(--nav-text-color);
    text-transform: none;
    letter-spacing: 0;
    font-weight: 400;
    border-bottom: none;
}

.dropdown-content a::after {
    display: none;
}

.dropdown-content a:hover {
    background: {{ nav_accent_color | color_modify: 'alpha', 0.1 }};
    color: var(--nav-accent-color);
}

/* Navigation Actions (Cart, Search, Account) */
.nav-actions {
    display: flex;
    align-items: center;
    gap: 1rem;
    z-index: 1001;
}

.nav-action-btn {
    background: none;
    border: none;
    color: var(--nav-text-color);
    font-size: 1.2rem;
    cursor: pointer;
    padding: 0.5rem;
    position: relative;
    transition: all var(--nav-transition-speed) ease;
    border-radius: 4px;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.nav-action-btn:hover {
    color: var(--nav-accent-color);
    background: {{ nav_accent_color | color_modify: 'alpha', 0.1 }};
}

.nav-action-btn:focus {
    outline: 2px solid var(--nav-accent-color);
    outline-offset: 2px;
}

/* Cart/Wishlist Count Badges */
.nav-badge {
    position: absolute;
    top: -2px;
    right: -2px;
    background: var(--nav-accent-color);
    color: white;
    font-size: 0.75rem;
    font-weight: 600;
    min-width: 18px;
    height: 18px;
    border-radius: 50%;
    display: none;
    align-items: center;
    justify-content: center;
    line-height: 1;
    animation: {% if enable_nav_animations %}badge-bounce 0.3s ease{% else %}none{% endif %};
}

.nav-badge.has-items {
    display: flex;
}

@keyframes badge-bounce {
    0% { transform: scale(0.8); }
    50% { transform: scale(1.2); }
    100% { transform: scale(1); }
}

/* Search Bar (when expanded) */
.nav-search-form {
    position: absolute;
    top: 100%;
    left: 20px;
    right: 20px;
    background: var(--mobile-menu-bg);
    padding: 1.5rem;
    border-radius: 8px;
    box-shadow: 0 8px 24px {{ nav_bg_color | color_modify: 'alpha', 0.3 }};
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all var(--nav-transition-speed) ease;
    z-index: 999;
    border: 1px solid {{ nav_text_color | color_modify: 'alpha', 0.1 }};
}

.nav-search-form.active {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
}

.nav-search-input {
    width: 100%;
    padding: 12px 16px;
    background: {{ nav_bg_color }};
    border: 2px solid transparent;
    border-radius: 8px;
    color: var(--nav-text-color);
    font-size: 1rem;
    transition: border-color var(--nav-transition-speed) ease;
}

.nav-search-input:focus {
    outline: none;
    border-color: var(--nav-accent-color);
}

.nav-search-input::placeholder {
    color: {{ nav_text_color | color_modify: 'alpha', 0.6 }};
}

/* Hamburger Menu Icon */
.hamburger {
    display: none;
    flex-direction: column;
    cursor: pointer;
    z-index: 1001;
    background: none;
    border: none;
    padding: 0.5rem;
    border-radius: 4px;
    transition: background-color var(--nav-transition-speed) ease;
}

.hamburger:hover {
    background: {{ nav_accent_color | color_modify: 'alpha', 0.1 }};
}

.hamburger:focus {
    outline: 2px solid var(--nav-accent-color);
    outline-offset: 2px;
}

.hamburger span {
    width: 25px;
    height: 3px;
    background: var(--nav-text-color);
    margin: 3px 0;
    transition: all var(--nav-transition-speed) ease;
    transform-origin: center;
    display: block;
}

.hamburger.active span:nth-child(1) {
    transform: rotate(45deg) translate(6px, 6px);
}

.hamburger.active span:nth-child(2) {
    opacity: 0;
}

.hamburger.active span:nth-child(3) {
    transform: rotate(-45deg) translate(6px, -6px);
}

/* Mobile Menu Overlay */
.mobile-menu-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: {{ nav_bg_color | color_modify: 'alpha', 0.8 }};
    z-index: 999;
    opacity: 0;
    visibility: hidden;
    transition: all var(--nav-transition-speed) ease;
    backdrop-filter: {% if enable_nav_blur %}blur(5px){% else %}none{% endif %};
}

.mobile-menu-overlay.active {
    opacity: 1;
    visibility: visible;
}

/* Mobile Menu Panel */
.mobile-menu {
    position: fixed;
    top: 0;
    right: -100%;
    width: var(--mobile-menu-width);
    max-width: 90vw;
    height: 100vh;
    background: var(--mobile-menu-bg);
    z-index: 1000;
    transition: right var(--nav-transition-speed) ease;
    overflow-y: auto;
    box-shadow: -4px 0 20px {{ nav_bg_color | color_modify: 'alpha', 0.3 }};
}

.mobile-menu.active {
    right: 0;
}

.mobile-menu-content {
    padding: 2rem;
    height: 100%;
    display: flex;
    flex-direction: column;
}

/* Mobile Menu Header */
.mobile-menu-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid {{ nav_text_color | color_modify: 'alpha', 0.2 }};
}

{% if logo_image %}
.mobile-menu-header img {
    height: calc(var(--mobile-logo-width) * 0.8);
    width: auto;
}
{% else %}
.mobile-menu-header h2 {
    font-family: var(--font-primary, 'Orbitron', monospace);
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--nav-text-color);
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.mobile-menu-header h2 .text-accent {
    color: var(--nav-accent-color);
}
{% endif %}

.mobile-menu-close {
    background: none;
    border: none;
    color: var(--nav-text-color);
    font-size: 2rem;
    cursor: pointer;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    transition: background-color var(--nav-transition-speed) ease;
}

.mobile-menu-close:hover {
    background-color: var(--nav-accent-color);
}

.mobile-menu-close:focus {
    outline: 2px solid var(--nav-accent-color);
    outline-offset: 2px;
}

/* Mobile Navigation Links */
.mobile-nav-links {
    list-style: none;
    flex: 1;
    margin: 0;
    padding: 0;
}

.mobile-nav-links li {
    margin-bottom: 0.5rem;
}

.mobile-nav-links a {
    color: var(--nav-text-color);
    text-decoration: none;
    font-size: 1.1rem;
    font-weight: 500;
    padding: 1rem 0;
    display: block;
    border-bottom: 1px solid {{ nav_text_color | color_modify: 'alpha', 0.1 }};
    transition: all var(--nav-transition-speed) ease;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.mobile-nav-links a:hover {
    color: var(--nav-accent-color);
    padding-left: 1rem;
    background: {{ nav_accent_color | color_modify: 'alpha', 0.05 }};
}

.mobile-nav-links a.active {
    color: var(--nav-accent-color);
    background: {{ nav_accent_color | color_modify: 'alpha', 0.1 }};
}

.mobile-nav-links a:focus {
    outline: 2px solid var(--nav-accent-color);
    outline-offset: 2px;
}

/* Mobile Submenu Styles */
.mobile-nav-links .has-submenu > a::after {
    content: '+';
    float: right;
    font-size: 1.2rem;
    transition: transform var(--nav-transition-speed) ease;
}

.mobile-nav-links .has-submenu.expanded > a::after {
    transform: rotate(45deg);
}

.mobile-submenu {
    max-height: 0;
    overflow: hidden;
    transition: max-height var(--nav-transition-speed) ease;
    background: {{ nav_bg_color | color_modify: 'alpha', 0.3 }};
    margin-left: 1rem;
    border-radius: 4px;
}

.mobile-submenu.expanded {
    max-height: 500px;
}

.mobile-submenu a {
    padding: 0.75rem 1rem;
    font-size: 1rem;
    text-transform: none;
    letter-spacing: 0;
    border-bottom: 1px solid {{ nav_text_color | color_modify: 'alpha', 0.05 }};
}

/* Mobile Menu Footer */
.mobile-menu-footer {
    margin-top: auto;
    padding-top: 2rem;
    border-top: 2px solid {{ nav_text_color | color_modify: 'alpha', 0.2 }};
}

.mobile-menu-footer p {
    color: {{ nav_text_color | color_modify: 'alpha', 0.7 }};
    margin-bottom: 0.5rem;
    font-size: 0.9rem;
}

.mobile-menu-social {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
}

.mobile-menu-social a {
    color: {{ nav_text_color | color_modify: 'alpha', 0.7 }};
    font-size: 1.2rem;
    transition: color var(--nav-transition-speed) ease;
}

.mobile-menu-social a:hover {
    color: var(--nav-accent-color);
}

/* Customer Account Links in Mobile Menu */
.mobile-customer-info {
    background: {{ nav_accent_color | color_modify: 'alpha', 0.1 }};
    padding: 1rem;
    border-radius: 8px;
    margin-bottom: 1rem;
}

.mobile-customer-info .customer-name {
    color: var(--nav-accent-color);
    font-weight: 600;
    margin-bottom: 0.5rem;
}

.mobile-customer-links {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
}

.mobile-customer-links a {
    background: var(--nav-accent-color);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    text-decoration: none;
    font-size: 0.9rem;
    transition: background-color var(--nav-transition-speed) ease;
}

.mobile-customer-links a:hover {
    background: var(--nav-hover-color);
}

/* Currency/Language Selector (if applicable) */
.nav-locale-selector {
    position: relative;
    margin-left: 1rem;
}

.locale-toggle {
    background: none;
    border: 1px solid {{ nav_text_color | color_modify: 'alpha', 0.3 }};
    color: var(--nav-text-color);
    padding: 0.5rem 1rem;
    border-radius: 4px;
    cursor: pointer;
    font-size: 0.9rem;
    transition: all var(--nav-transition-speed) ease;
}

.locale-toggle:hover {
    border-color: var(--nav-accent-color);
    color: var(--nav-accent-color);
}

.locale-dropdown {
    position: absolute;
    top: 100%;
    right: 0;
    background: var(--mobile-menu-bg);
    min-width: 150px;
    box-shadow: 0 4px 20px {{ nav_bg_color | color_modify: 'alpha', 0.3 }};
    border-radius: 4px;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all var(--nav-transition-speed) ease;
    z-index: 1002;
    border: 1px solid {{ nav_text_color | color_modify: 'alpha', 0.1 }};
}

.locale-dropdown.active {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
}

.locale-dropdown a {
    display: block;
    padding: 0.75rem 1rem;
    color: var(--nav-text-color);
    text-decoration: none;
    transition: background-color var(--nav-transition-speed) ease;
}

.locale-dropdown a:hover {
    background: {{ nav_accent_color | color_modify: 'alpha', 0.1 }};
    color: var(--nav-accent-color);
}

/* Shopify Announcement Bar Integration */
.announcement-bar {
    background: var(--nav-accent-color);
    color: white;
    padding: 0.5rem 0;
    text-align: center;
    font-size: 0.9rem;
    font-weight: 500;
    position: relative;
    z-index: 999;
}

.announcement-bar + .navbar {
    top: 40px;
}

.announcement-bar a {
    color: white;
    text-decoration: underline;
}

.announcement-bar .close-announcement {
    position: absolute;
    right: 20px;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    color: white;
    cursor: pointer;
    font-size: 1.2rem;
}

/* Navigation Responsive Design */
@media (max-width: 1024px) {
    .nav-menu {
        gap: 1.5rem;
    }
    
    .nav-container {
        padding: 0 15px;
    }
    
    .dropdown-content {
        min-width: 180px;
    }
}

@media (max-width: 768px) {
    .nav-menu {
        display: none;
    }
    
    .hamburger {
        display: flex;
    }
    
    .nav-container {
        padding: 0 15px;
    }
    
    .nav-logo img {
        height: var(--mobile-logo-width);
    }
    
    .nav-actions {
        gap: 0.5rem;
    }
    
    .nav-action-btn {
        font-size: 1.1rem;
        width: 36px;
        height: 36px;
    }
    
    .nav-search-form {
        left: 15px;
        right: 15px;
    }
    
    .locale-toggle {
        font-size: 0.8rem;
        padding: 0.4rem 0.8rem;
    }
}

@media (max-width: 480px) {
    .mobile-menu {
        width: min(var(--mobile-menu-width), 100vw);
    }
    
    .mobile-menu-content {
        padding: 1.5rem;
    }
    
    .nav-logo img {
        height: calc(var(--mobile-logo-width) * 0.9);
    }
    
    .mobile-menu-header img {
        height: calc(var(--mobile-logo-width) * 0.7);
    }
    
    .nav-actions {
        gap: 0.25rem;
    }
    
    .nav-action-btn {
        width: 32px;
        height: 32px;
        font-size: 1rem;
    }
    
    .mobile-customer-links {
        flex-direction: column;
    }
}

/* High contrast mode support */
@media (prefers-contrast: high) {
    .navbar {
        border-bottom: 2px solid var(--nav-text-color);
    }
    
    .nav-menu a::after {
        height: 3px;
    }
}

/* Reduced motion support */
@media (prefers-reduced-motion: reduce) {
    * {
        --nav-transition-speed: 0.01ms;
        --nav-hover-transform: none;
    }
    
    .nav-badge {
        animation: none;
    }
}

/* Print styles */
@media print {
    .navbar,
    .hamburger,
    .mobile-menu,
    .mobile-menu-overlay,
    .nav-search-form,
    .announcement-bar {
        display: none !important;
    }
}

/* Dark mode overrides (if theme supports light mode toggle) */
{% unless settings.force_dark_mode %}
@media (prefers-color-scheme: light) {
    :root {
        --nav-bg-color: #ffffff;
        --nav-text-color: #000000;
        --mobile-menu-bg: #f8f9fa;
    }
}
{% endunless %}

/* Theme editor specific styles */
{% if request.design_mode %}
.navbar {
    position: relative !important;
}

.shopify-section-header-group {
    position: sticky;
    top: 0;
    z-index: 1000;
}
{% endif %}

/* RTL language support */
[dir="rtl"] .mobile-menu {
    right: auto;
    left: -100%;
}

[dir="rtl"] .mobile-menu.active {
    left: 0;
}

[dir="rtl"] .dropdown-content {
    left: auto;
    right: 0;
}

[dir="rtl"] .locale-dropdown {
    right: auto;
    left: 0;
}

[dir="rtl"] .mobile-nav-links .has-submenu > a::after {
    float: left;
}

[dir="rtl"] .mobile-nav-links a:hover {
    padding-left: 0;
    padding-right: 1rem;
}